<Window x:Class="StudentsWpfSecond.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentsWpfSecond"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TextBlock Text="Вопрос1"/>
        <TextBox x:Name="BoxAnswer1" Margin="0 0 0 20" Text="{Binding Answer1}"/>
        <TextBlock Text="Вопрос2"/>
        <TextBox x:Name="BoxAnswer2" Text="{Binding Answer2}"/>
        <Button Content="Проверить" Click="ButtonClick"/>
    </StackPanel>
</Window>
